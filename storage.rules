rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Users can upload photos to their own folder
    match /users/{userId}/photos/{photoId} {
      allow read: if true; // Anyone can view photos (for feed/profiles)
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can upload voice notes for comments
    match /voice_notes/{userId}/{thingId}/{fileName} {
      allow read: if true; // Anyone can listen to voice notes
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Fallback - deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

