rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow others to read basic user info for following/search
      allow read: if request.auth != null;
    }
    
    // Posts - anyone authenticated can read, authors can write
    match /posts/{postId} {
      // Anyone authenticated can read posts (for feed)
      allow read: if request.auth != null;
      
      // Only the author can create their posts
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.authorId;
      
      // Only the author can update their posts
      allow update: if request.auth != null && 
        request.auth.uid == resource.data.authorId;
        
      // Only the author can delete their posts  
      allow delete: if request.auth != null && 
        request.auth.uid == resource.data.authorId;
    }
    
    // Personal items - users can only access their own
    match /personal_items/{itemId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }
    
    // Allow authenticated users to read all documents for search functionality
    match /{document=**} {
      allow read: if request.auth != null;
    }
  }
} 